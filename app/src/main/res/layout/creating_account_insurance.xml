<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/register_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:progress="66"
            android:progressDrawable="@drawable/progress_bar_color" />


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/Assurance_spinner"

            app:met_baseColor="#FFF"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="choisissez votre assurance"
            android:textColor="#FFF"
            android:textColorHighlight="#FFF"
            android:textColorHint="#FFF"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:met_textColor="#FFF"
            app:met_textColorHint="#FFF"
            app:met_primaryColor="#FFF"/>



        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/Agence_spinner"

            app:met_baseColor="#FFF"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="choisissez votre agence"
            android:textColor="#FFF"
            android:textColorHighlight="#FFF"
            android:textColorHint="#FFF"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            app:met_textColor="#FFF"
            app:met_textColorHint="#FFF"
            app:met_primaryColor="#FFF"/>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/num_police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:minHeight="30dp"

            android:theme="@style/TextLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp">

            <EditText
                android:id="@+id/num_police_value"


                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Numero police"
                android:textColor="#FFF"

                />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"

            >


            <Button

                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:text="Passer"

                />

            <Button

                android:id="@+id/apply_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#2196F3"
                android:text="sauvegarder" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>